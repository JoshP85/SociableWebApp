@model SociableWebApp.Models.Post
@{
    var appUser = ViewBag.AppUser;
    var posts = ViewBag.Posts;
}

<div class="container card border-0 shadow rounded-3 mt-5">
    <div class="row">
        <div class="d-flex col-4">
            <div class="m-3">
                <div class="text-center">
                    <img src="@Url.Content("https://userprofileimgs3655612.s3.ap-southeast-2.amazonaws.com/" + @appUser.AppUserID)" alt="Image" style="width: 180px; height: 180px;" />

                </div>
                <div class="text-center">
                    <a class="fw-bold" asp-controller="Newsfeed" asp-action="Logout" style="text-decoration:none">Logout</a>
                </div>
                <ul class="list-group list-group-flush">
                    <a class="list-group-item border-0" asp-controller="AppUser" asp-action="Profile">@appUser.Name</a>
                    <a class="list-group-item border-0" asp-controller="AppUser" asp-action="PublicProfile">Public Profile</a>
                    @if (@appUser.ReceivedFriendRequests == null)
                    {
                        <a class="list-group-item border-0" data-bs-toggle="modal" href="#exampleModal">Friend Requests(0)</a>
                    }
                    else
                    {
                        <a class="list-group-item border-0" data-bs-toggle="modal" href="#exampleModal">Friend Requests(@appUser.ReceivedFriendRequests.Count)</a>
                    }
                    <li class="list-group-item border-0">@appUser.Email</li>
                    <li class="list-group-item border-0">@appUser.City, @appUser.Country</li>
                </ul>
            </div>
        </div>
        <div class="d-flex flex-column col m-3">
            <form asp-controller="NewsFeed" asp-action="NewPost">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @*TODO: Make media uploading possible*@
                    <input type="hidden" asp-for="PostMediaUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea asp-for="PostContent" rows="2" placeholder="Whats on your mind..." class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Post" class="btn btn-primary btn-login text-uppercase fw-bold" />
                </div>
            </form>
            @foreach (var post in posts)
            {
                <hr />
                <div class="col-10 mb-3">
                    <div class="d-flex flex-row mb-1">
                        <img src="@Url.Content("https://userprofileimgs3655612.s3.ap-southeast-2.amazonaws.com/" + @post.PostAuthorID)" alt="Image" style="width: 40px; height: 40px;" />
                        <div class="ms-4 mt-2">
                            <form asp-controller="AppUser" asp-action="PublicProfile">
                                <input type="hidden" name="appUserID" value="@post.PostAuthorID" class="form-control" />
                                <input type="submit" class="no-button-style fw-bold" value="@post.PostAuthorName" />
                            </form>
                        </div>
                        <div class="ms-2 mt-2">
                            @post.TimeSincePost
                        </div>
                    </div>
                    <div>
                        @post.PostContent
                    </div>
                    <p>
                        <a data-bs-toggle="collapse" href="#b\\@post.PostID" role="button" aria-expanded="false" aria-controls="b\@post.PostID" style="text-decoration:none">
                            Comments(@post.Comments.Count)
                        </a>
                    </p>
                    <div class="collapse" id="b\@post.PostID">

                        @foreach (var comment in post.Comments)
                        {
                            <div class="col-10">
                                <img src="@Url.Content("https://userprofileimgs3655612.s3.ap-southeast-2.amazonaws.com/" + @comment.CommentAuthorID)" alt="Image" style="width: 40px; height: 40px;" />
                                <b>@comment.CommentAuthorName</b>
                                @comment.TimeSinceComment
                                <div>
                                    @comment.CommentContent
                                </div>
                            </div>
                        }
                        <form asp-controller="NewsFeed" asp-action="NewComment">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <textarea name="commentContent" rows="1" placeholder="Reply to @post.PostAuthorName" class="form-control"></textarea>
                                <input type="hidden" name="postID" value="@post.PostID" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Reply" class="btn btn-primary btn-login text-uppercase fw-bold" />
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Friend Requests</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (appUser.ReceivedFriendRequests != null)
                {
                    @foreach (var friendRequest in appUser.ReceivedFriendRequests)
                    {
                        <p>@friendRequest.Name</p>
                        <p>@friendRequest.City</p>
                        <p>@friendRequest.Country</p>
                        <p>@friendRequest.ProfileImgUrl</p>
                    }
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

